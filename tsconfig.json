{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "outDir": "lib",
    "rootDir": "src",
    "module": "esnext",
    "esModuleInterop": true,
    "target": "es5",
    "lib": ["ESNext","DOM"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
  },
  "include": [
    "src/**/*",
  ]
}
